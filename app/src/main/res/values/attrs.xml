<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="indicatorFastScrollerStyle" format="reference" />
    <attr name="indicatorFastScrollerThumbStyle" format="reference" />

    <attr name="fastScrollerIconSize" format="dimension" />
    <attr name="fastScrollerIconColor" format="color" />
    <attr name="fastScrollerTextPadding" format="dimension" />
    <attr name="fastScrollerThumbColor" format="color" />

    <declare-styleable name="FastScrollerView">
        <attr name="fastScrollerIconSize" />
        <attr name="fastScrollerIconColor" />
        <attr name="android:textAppearance" />
        <attr name="android:textColor" />
        <attr name="fastScrollerTextPadding" />
    </declare-styleable>

    <declare-styleable name="FastScrollerThumbView">
        <attr name="fastScrollerThumbColor" />
        <attr name="fastScrollerIconSize" />
        <attr name="fastScrollerIconColor" />
        <attr name="android:textAppearance" />
        <attr name="android:textColor" />
    </declare-styleable>

    <declare-styleable name="AutoFitTextView">
        <!-- Minimum size of the text. -->
        <attr name="minTextSize" format="dimension" />
        <!-- Amount of precision used to calculate the correct text size to fit within its
        bounds. Lower precision is more precise and takes more time. -->
        <attr name="precision" format="float" />
        <!-- Defines whether to automatically resize text to fit to the view's bounds. -->
        <attr name="sizeToFit" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RecyclerViewFastScroller">
        <attr name="trackDrawable" format="reference" />
        <attr name="handleDrawable" format="reference" />
        <attr name="popupDrawable" format="reference" />
        <attr name="popupTextStyle" format="reference" />
        <attr name="fastScrollEnabled" format="boolean" />
        <attr name="popupPosition" format="enum">
            <enum name="beforeTrack" value="0" />
            <enum name="afterTrack" value="1" />
        </attr>
        <attr name="addLastItemPadding" format="boolean" />
        <attr name="fastScrollDirection" format="enum">
            <enum name="vertical" value="0" />
            <enum name="horizontal" value="1" />
        </attr>
        <attr name="handleWidth" format="dimension" />
        <attr name="handleHeight" format="dimension" />
        <attr name="handleHasFixedSize" format="boolean" />
        <attr name="supportSwipeToRefresh" format="boolean" />

        <attr name="trackMarginStart" format="dimension" />
        <attr name="trackMarginEnd" format="dimension" />

        <attr name="handleVisibilityDuration" format="integer" />
    </declare-styleable>
</resources>
